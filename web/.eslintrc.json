{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "jest":true
  },
  "extends": ["eslint:recommended", "airbnb", "prettier", "prettier/react"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "prettier/prettier": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.spec.js", "./src/test-helper/*.js"]}],
    "react/prefer-stateless-function": 0,
    "comma-dangle": ["error", "never"],
    "no-unused-vars":0
  }
}
